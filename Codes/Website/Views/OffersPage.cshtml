@model List<VouchersModel>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="functionality.js"></script>
    <link rel="stylesheet" type="text/css" href="landingPage.css">
    <link rel="stylesheet" type="text/css" href="ReachUsPage.css">
    <link rel="stylesheet" type="text/css" href="OffersPage.css">
    <title>OFFERS</title>
</head>

<body>
    <ul class="menubar">
        <div class="dropdown">
            <img class="dropicon" src="./images/burger.png">
            <div class="dropdowncontent">
                <a href="/AboutPage">ABOUT US</a>
                <a href="/StayWithUsPage">SUITES</a>
                <a href="/EntryPage">EXPERIENCE</a>
            </div>
        </div>
        <div class="menuitems">
            <a href="/StayWithUsPage" class="links">STAY WITH US</a>
            <a href="/DineWithUsPage" class="links"> | DINE WITH US</a>
            <a href="/OffersPage" class="links"> | OFFERS</a>
            <a href="/ReachUsPage" class="links"> | REACH US</a>
        </div>
    </ul>
    <div class="logoloc">
        <a href="/LandingPage"><img class="logo" src="./images/finesttokyologo.png"></a>
    </div>
    <div class=offers>
        @foreach(var voucher in Model){
        <div class="offers1">
           <div class="imgoverlay">
                <img src="./images/voucher.jpg">
                <div class="txtoverlay">
                    <a href="/ReservationFormPage"><div class="text">AVAIL NOW!</div></a>
                </div>
            </div>
           <p><b>@voucher.Code</b></p>
            <p>Discount: JPÂ¥@voucher.SalePrice</p>
            <p>@voucher.VoucherStatus</p>
        </div>
        }  
    </div>
    <div class = "disclaimer">
        <p>Because we care for you, enjoy these offers and copy our promo codes upon your booking reservation.
            Vouchers are not applicable to restaurant table reservations.
        </p>
        <p>Promos are subjected to tax and good for a limited number only.</p>
    </div>
</body>

</html>