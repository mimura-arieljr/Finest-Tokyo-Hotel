@model HotelBookingsModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="landingPage.css">
    <link rel="stylesheet" type="text/css" href="ReservationFormPage.css">
    <link rel="stylesheet" type="text/css" href="ConfirmationPage.css">
    <title>Confirmation</title>
</head>

<body>
    <ul class="menubar">
        <div class="dropdown">
            <img class="dropicon" src="./images/burger.png">
            <div class="dropdowncontent">
                <a href="/AboutPage">ABOUT US</a>
                <a href="/StayWithUsPage">SUITES</a>
                <a href="/EntryPage">EXPERIENCE</a>
            </div>
        </div>

        <div class="menuitems">
            <a href="/StayWithUsPage" class="links">STAY WITH US</a>
            <a href="/DineWithUsPage" class="links"> | DINE WITH US</a>
            <a href="/OffersPage" class="links"> | OFFERS</a>
            <a href="/ReachUsPage" class="links"> | REACH US</a>
        </div>
    </ul>
    <div class="logoloc">
        <a href="landingPage.html"><img class="logo" src="./images/finesttokyologo.png"></a>
    </div>
    <div class="confirm">
        <p class="reservation">
            SUMMARY OF YOUR HOTEL ROOM RESERVATION
        </p>
        <div class="summary">
        <p class="first">Check In Date: @Model.CheckInDateString</p>
        <p>Chek Out Date: @Model.CheckOutDateString </p>
        <p>Guest Name: @Model.GuestName</p>
        <p>No. of Guests: @Model.NoOfGuests</p>
        <p>Total Payment: JP¥@Model.PriceBeforeDiscount</p>
        <p>Voucher Code: @Model.VoucherCode</p>
        <p>Voucher Discount: JP¥@Model.VoucherCodeDiscount</p>
        <p>Payment Type: @Model.PaymentType</p>
        <p>Discounted Payment: <b>JP¥@Model.TotalPrice </b></p>
        </div>
        <form method="POST" action="/roombookings">
            <input type="hidden" id="datefield" name="checkin" value="@Model.CheckInDate">
            <input type="hidden" id="datefield" name="checkout" value="@Model.CheckOutDate">
            <input type="hidden" id="datenow" name="datenow" value="@Model.BookingDate">
            <input type="hidden" id="gname" name="gname" value="@Model.GuestName">
            <input type="hidden" id="guests" name="guests" value="@Model.NoOfGuests">
            <input type="hidden" id="payment" name="payment" value="@Model.PaymentType">
            <input type="hidden" id="rate" name="roomrate" value="@Model.TotalPrice">
            <input type="hidden" id="roomType" name="roomType" value="@Model.RoomTypeId">
            <input type="hidden" id="room" name="room" value="@Model.RoomId">
            <input type="submit" class="text" value="CONFIRM">
        </form>
        <p>If you wish to cancel your reservation, please do so on or before a week before 
            your check in date. We are looking forward to having you!</p>
    </div>
</body>

</html>